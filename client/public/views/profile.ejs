<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mobcats</title>
    <!-- <link rel="stylesheet" href="/css/styles.css"> -->
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet"> <!-- adds FontAwesome library -->
    <link rel="stylesheet" href="/css/profile.css" media="screen" title="no title" charset="utf-8">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/2.1.1/js.cookie.min.js" charset="utf-8"></script>
    <script src="/js/users.js" charset="utf-8"></script>
  </head>
  <body>

    <h1>Profile</h1>

    <% if(Object.keys(user).length === 0) { %>
      <div id="login-div" class="">
        <form id="login-form">
          <input type="text" name="username" value="" placeholder="Username">
          <input type="password" name="password" value="" placeholder="Password">
          <input type="submit" name="submit-login" value="Login">
        </form>
      </div>
    <% } else { %>
      <div id="profile-content">
        <%= user.firstName %>
        <%= user.lastName %>
        <input id="logout-button" type="submit" name="submit-logout" value="Logout">
      </div>
    <% } %>

  </body>
</html>
